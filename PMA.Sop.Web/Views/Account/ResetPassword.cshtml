@model PMA.Sop.Domain.DTOs.User.ResetPasswordDto
@inject IResourceManager _resourceManager
@{
    ViewData["Title"] = _resourceManager[SharedResource.Register];
}
<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a href="/">@_resourceManager[SharedResource.HomePage]</a></li>
                        <li>@_resourceManager[SharedResource.ForgetPassword]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="customer_login mt-32">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="account_form register">
                    <h2>
                        @_resourceManager[SharedResource.ForgetPassword]
                        <i class="fa fa-registered"></i>
                    </h2>
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <form asp-action="ResetPassword" asp-controller="Account" method="post">
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور" aria-describedby="password">
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </div>
                        </div>
                        <br />

                        <div class="row">
                            <div class="form-group">
                                <label asp-for="RePassword"></label>
                                <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار رمز عبور" aria-describedby="password">
                                <span asp-validation-for="RePassword" class="text-danger"></span>
                            </div>
                        </div>
                        <br />
                        <input type="hidden" asp-for="TokenId" />
                        <input type="hidden" asp-for="UserId" />
                        <div class="row">
                            <div class="login_submit">
                                <button class="btn btn-outline-success" type="submit">
                                    <span class="fa fa-undo"></span>
                                    @_resourceManager[SharedResource.SendBtn]
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
