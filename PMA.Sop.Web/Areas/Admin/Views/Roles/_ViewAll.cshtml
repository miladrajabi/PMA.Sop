@model List<PMA.Sop.Domain.DTOs.Role.RoleListDto>
@inject IResourceManager _resourceManager

<section class="content">
    <div class="row">

        <div class="col-12">
            <div class="box">
                <div class="box-header">
                    <h4 class="box-title">کاربران</h4>
                </div>
                <div class="box-body">
                    <div class="clearfix">
                        <a class="btn btn-success btn-flat mb-5" onclick="showInPopup('/Admin/roles/Create', '@_resourceManager[SharedResource.AddRoles]')">
                            <i class="fa fa-plus"></i>
                            افزودن کاربر جدید
                        </a>
                    </div>
                    <div class="table-responsive">
                        <table id="complex_header" class="table table-striped table-bordered display"
                               style="width: 100%">
                            <thead>
                                <tr>
                                    <th>ردیف</th>
                                    <th>@_resourceManager[SharedResource.Title]</th>
                                    <th>@_resourceManager[SharedResource.Description]</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ var row = 1;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@row</td>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <a class="btn btn-info btn-xs" onclick="showInPopup('@Url.Action("Create","Roles", new { Area = "Admin" },Context.Request.Scheme)', '@_resourceManager[SharedResource.AddRoles]')">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <a class="btn  btn-danger btn-xs">
                                                <i class="fa fa-remove"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    row++;
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
