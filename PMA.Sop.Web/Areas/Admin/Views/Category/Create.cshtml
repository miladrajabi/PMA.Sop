@inject IResourceManager _resourceManager
@using PMA.Sop.Domain.Enum
@model PMA.Sop.Domain.DTOs.Products.Categories.CreateCategoryDto
@{
    ViewData["Title"] = _resourceManager[SharedResource.Role];
}


<div class="content-header">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="page-title">@_resourceManager[SharedResource.ProductManagement]</h3>
            <div class="d-inline-block align-items-center">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                                <i class="mdi mdi-home-outline"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item" aria-current="page">@_resourceManager[SharedResource.Product]</li>
                        <li class="breadcrumb-item active" aria-current="page">@_resourceManager[SharedResource.Category]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="box">
                <div class="box-header">
                    <h4 class="box-title">@_resourceManager[SharedResource.Product]</h4>
                </div>
                <div class="box-body">
                    <form enctype="multipart/form-data" asp-action="Create" asp-controller="Category" asp-area="Admin" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label asp-for="Title" class="control-label"></label>
                                <div class="input-group">
                                    <input type="text" asp-for="Title" class="form-control" />
                                </div>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ParentId" class="control-label"></label>
                                <div class="input-group">
                                    <drop-down-list-font-awesome a></drop-down-list-font-awesome>
                                    <select asp-for="ParentId" class="form-control select2" asp-items="@Model.Parent">
                                        <option value="0" selected="selected">انتخاب کنید</option>
                                    </select>
                                </div>
                                <span asp-validation-for="ParentId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <label asp-for="Icon" class="control-label"></label>
                                <div class="input-group">
                                    <drop-down-list-font-awesome asp-for="Icon" ></drop-down-list-font-awesome>
                                </div>
                                <span asp-validation-for="Icon" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="box-footer text-right">
                            <button class="btn btn-success mr-1 mb-5 pull-right" type="submit">
                                <span class="fa fa-check-circle"></span>
                                @_resourceManager[SharedResource.Save]
                            </button>
                            <a asp-action="Index" class="btn btn-danger mb-5  pull-right">
                                <span class="fa fa-fw fa-undo"></span>
                                @_resourceManager[SharedResource.Cancel]
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

</section>

@section style
{
    @*<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css" rel="stylesheet" />*@

    <style>
        select {
            font-family: 'FontAwesome', 'sans-serif';
        }
    </style>

}
