@model PMA.Sop.Domain.DTOs.User.AddUserDto
@inject IResourceManager _resourceManager

@{
    ViewData["Title"] = _resourceManager[SharedResource.Role];
}

<div class="content-header">
    <div class="d-flex align-items-center">
        <div class="mr-auto">
            <h3 class="page-title">کاربران</h3>
            <div class="d-inline-block align-items-center">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Home" asp-action="Index">
                                <i class="mdi mdi-home-outline"></i>
                            </a>
                        </li>
                        <li class="breadcrumb-item" aria-current="page">@_resourceManager[SharedResource.UserManagement]</li>
                        <li class="breadcrumb-item active" aria-current="page">@_resourceManager[SharedResource.AddCategory]</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="box">
                <div class="box-header">
                    <h4 class="box-title">@_resourceManager[SharedResource.Role]</h4>
                </div>
                <div class="box-body">
                    <form asp-action="Create" asp-controller="User" asp-area="Admin" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="UserName" class="col-form-label col-md-2"></label>
                            <div class="col-md-10">
                                <input type="text" asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Password" class="col-form-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور" aria-describedby="password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="RePassword" class="col-form-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار رمز عبور" aria-describedby="password">
                                <span asp-validation-for="RePassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="RoleIds" class="col-form-label col-md-2"></label>
                            <div class="col-md-10">
                                <select asp-for="RoleIds" class="selectpicker" asp-items="@Model.ApplicationRoles" multiple>
                                </select>
                            </div>
                        </div>
                        <input type="hidden" asp-for="ApplicationRoles" />
                        <div class="box-footer text-right">
                            <button class="btn btn-success mr-1 mb-5 pull-right" type="submit">
                                <span class="fa fa-check-circle"></span>
                                @_resourceManager[SharedResource.Save]
                            </button>
                            <a asp-action="Index" class="btn btn-danger mb-5  pull-right">
                                <span class="fa fa-fw fa-undo"></span>
                                @_resourceManager[SharedResource.Cancel]
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

</section>
